<resources>

    <!-- Base application theme. -->
    <style name="Theme.LockScreen" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FullScreen" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LockText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PinSelector">
        <item name="android:src">@drawable/pin_selector</item>
        <item name="android:layout_width">@dimen/_12sdp</item>
        <item name="android:layout_height">@dimen/_12sdp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>

    <style name="PinBox">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="PinImage">
        <item name="android:layout_width">@dimen/_65sdp</item>
        <item name="android:layout_height">@dimen/_65sdp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="PinNumber">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="PinNumberLock">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/regularColor</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="PinNumberDelete">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/regularColor</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="PatternLockView" />

    <style name="PatternLockView.WithIndicator">
        <item name="plv_regularDotColor">@color/regularColor</item>
        <item name="plv_selectedCellBackground">@drawable/with_indicator_selected_bg</item>
        <item name="plv_selectedDotColor">@color/selectedColor</item>
        <item name="plv_errorCellBackground">@drawable/with_indicator_error_bg</item>
        <item name="plv_errorDotColor">@color/errorColor</item>
        <item name="plv_lineStyle">indicator</item>
        <item name="plv_regularLineColor">@color/selectedColor</item>
        <item name="plv_errorLineColor">@color/errorColor</item>
        <item name="plv_spacing">32dp</item>
    </style>

    <style name="Ad_Attribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_6ssp</item>
        <item name="android:text">AD</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:background">@drawable/ad_image</item>
        <item name="android:gravity">center</item>
        <item name="android:width">@dimen/_16sdp</item>
        <item name="android:height">@dimen/_10sdp</item>
    </style>

    <style name="Ad_Attribution_Native">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:text">AD</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:background">@drawable/ad_image</item>
        <item name="android:gravity">center</item>
        <item name="android:width">@dimen/_20sdp</item>
        <item name="android:height">@dimen/_15sdp</item>
    </style>

</resources>